<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WpfApp1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vod dannux"
        Height="150"
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText" Grid.Row="0"/>
        <TextBox x:Name="InputBox" Grid.Row="1" Margin="0,5,0,5"/>
        <Button Grid.Row="2" Content="OK" Width="80" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>